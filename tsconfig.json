{
    "compilerOptions": {
        "rootDir": ".",
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "tsc-out",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "lib": ["es5", "dom", "es2015.core"]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.spec.ts"
    ],
    "exclude": []
}
